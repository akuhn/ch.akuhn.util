<?xml version="1.0" ?>
<project default="compress" basedir=".">

    <target name="compress" description="Compression target">
    	<delete file="akuhn-util.jar"/>
        <jar jarfile="akuhn-util.jar">
        	<fileset dir="bin">
                <exclude name="**/tests/**/*.class"/>
                <include name="**/*.class COPYING*"/>
        	</fileset>
        	<fileset dir="src" includes="**/*.java"/>
        </jar>	
    	<zipfileset id="files" src="akuhn-util.jar"/>
    	<pathconvert property="listing" refid="files" pathsep="${line.separator}">
    		<globmapper from="${basedir}${file.separator}*" to="*"/>
    	</pathconvert>	
    	<echo message="${listing}"/>
    	<svn>
    		<wcVersion/>
    	</svn>
    </target>

</project>